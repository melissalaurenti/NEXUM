  <!-- AVATAR MODAL -->
  <div data-modal-target="avatarModal"
       data-action="click->modal#close"
       class="hidden fixed inset-0 flex items-center justify-center bg-black/40 z-50">

    <div class="[background:var(--um-sand)] rounded-2xl p-6 w-full max-w-lg mx-4 shadow-lg relative"
         data-action="click->modal#stopPropagation">

      <!-- CLOSE BUTTON -->
      <button data-action="click->modal#close"
              class="absolute top-3 right-4 text-gray-400 hover:text-gray-600 text-xl">
        &times;
      </button>

      <h2 class="text-xl font-semibold mb-1 text-slate-800">Add your profile photo</h2>
      <p class="text-sm text-slate-500 mb-5">Help others recognise you ‚Äî upload a photo or pick an avatar.</p>

      <!-- Upload area -->
      <div data-action="click->modal#triggerFileUpload"
           data-modal-target="uploadArea"
           class="border-2 border-dashed border-slate-300 rounded-xl p-5 text-center cursor-pointer hover:border-slate-400 transition mb-5">
        <img data-modal-target="uploadPreview"
             class="hidden mx-auto h-24 w-24 rounded-full object-cover mb-2">
        <div data-modal-target="uploadPlaceholder">
          <div class="text-3xl mb-1">üì∑</div>
          <p class="text-slate-600 text-sm font-medium">Click to upload your photo</p>
          <p class="text-xs text-slate-400 mt-0.5">JPG, PNG or WEBP</p>
        </div>
      </div>

      <!-- Divider -->
      <div class="flex items-center gap-3 mb-4">
        <hr class="flex-1 border-slate-200">
        <span class="text-xs text-slate-400 font-semibold tracking-wide">OR CHOOSE AN AVATAR</span>
        <hr class="flex-1 border-slate-200">
      </div>

      <!-- Avatar grid -->
      <div class="grid grid-cols-6 gap-2 mb-6">
        <% [
          ["1f431", "Cat"],   ["1f436", "Dog"],   ["1f98a", "Fox"],
          ["1f430", "Rabbit"],["1f43c", "Panda"],  ["1f428", "Koala"],
          ["1f43b", "Bear"],  ["1f427", "Penguin"],["1f981", "Lion"],
          ["1f42f", "Tiger"], ["1f989", "Owl"],    ["1f438", "Frog"]
        ].each do |code, name| %>
          <button type="button"
                  data-action="click->modal#selectAvatar"
                  data-modal-target="avatarOption"
                  data-avatar-url="https://cdn.jsdelivr.net/gh/twitter/twemoji@14.0.2/assets/72x72/<%= code %>.png"
                  title="<%= name %>"
                  style="background: var(--um-sand);"
                  class="rounded-full overflow-hidden border-2 border-transparent hover:opacity-80 transition focus:outline-none">
            <img src="https://cdn.jsdelivr.net/gh/twitter/twemoji@14.0.2/assets/72x72/<%= code %>.png"
                 alt="<%= name %>"
                 class="h-12 w-12 object-contain p-1" loading="lazy">
          </button>
        <% end %>
      </div>

      <button type="button"
              data-action="click->modal#submitRegistration"
              data-modal-target="joinBtn"
              disabled
              class="um-btn-secondary w-full py-3 rounded-full font-semibold cursor-not-allowed opacity-40 mb-3">
        Join NEXUM ‚Üí
      </button>

    </div>
  </div>

  <!-- CITY MODAL -->
  <div data-modal-target="cityModal"
       data-action="click->modal#close"
       class="hidden fixed inset-0 flex items-center justify-center bg-black/40 z-50">

    <div class="[background:var(--um-sand)] rounded-2xl overflow-hidden w-full max-w-2xl mx-4 shadow-lg relative"
         data-action="click->modal#stopPropagation"
         data-controller="city-map">

      <!-- CLOSE BUTTON -->
      <button data-action="click->modal#close"
              class="absolute top-3 right-4 text-gray-400 hover:text-gray-600 text-xl z-10">
        &times;
      </button>

      <div class="p-6 pb-3 relative z-[1000]">
