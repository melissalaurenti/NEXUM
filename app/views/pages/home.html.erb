<section class="relative min-h-[70vh] lg:min-h-[78vh] flex items-center">

  <!-- Background Image -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <%= image_tag "rome-hero.jpg",
      class: "w-full h-full object-cover object-[center_60%] brightness-95 contrast-95 saturate-105" %>

    <div class="absolute inset-0"
         style="background: linear-gradient(to bottom, rgba(245,241,239,0.0) 82%, var(--um-sand) 100%);"></div>
  </div>

  <!-- Content -->
  <div class="w-full flex items-center">

    <!-- Left Glass Card -->
    <div class="bg-white/50 backdrop-blur-md p-8 rounded-3xl shadow-lg max-w-md ml-8 md:ml-20 lg:ml-32">
      <h1 class="text-4xl font-bold leading-tight">
        Discover your city differently.
      </h1>

      <p class="mt-6 text-gray-600">
        Meet new people. Find real events. Feel at home.
      </p>

      <div class="mt-8 space-y-4">
        <input type="text"
          placeholder="Where are you?"
          class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-black">

        <input type="date"
          class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-black">

        <input type="text"
          placeholder="What are you into?"
          class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-black">

        <button class="w-full bg-black text-white py-3 rounded-full hover:bg-gray-800 transition">
          Find Events
        </button>
      </div>
    </div>

  </div>
</section>

<hr class="my-3 h-px w-full bg-gradient-to-r from-transparent via-[rgba(209,167,160,0.45)] to-transparent border-none">

<%= render "top_cities" %>

<hr class="my-3 h-px w-full bg-gradient-to-r from-transparent via-[rgba(209,167,160,0.45)] to-transparent border-none">

<%= render "highlights" %>
