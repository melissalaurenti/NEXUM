<section class="pb-24" style="background: var(--um-sand);">
  <div class="w-full px-8 md:px-20 lg:px-32">

    <!-- Header -->
    <div class="flex items-end justify-between">
      <div class="w-full">

        <p class="text-sm font-semibold tracking-wide text-gray-500 uppercase">
          Highlights
        </p>

        <h2 class="mt-2 text-3xl font-semibold tracking-tight text-gray-900">
          What’s happening right now
        </h2>

        <p class="mt-3 text-gray-600 max-w-xl">
          Curated events with good vibes — join in or save for later.
        </p>
      </div>
    </div>

    <!-- Cards -->
    <div class="mt-12 grid gap-8 md:grid-cols-3">

      <% events = [
        { title: "Creative Meetup & Brunch", badge: "NEW", badge_style: "bg-rose-200 text-rose-900", spots: 5, image: "highlight-creative.jpg" },
        { title: "Urban Yoga", badge: "Fully booked", badge_style: "bg-gray-200 text-gray-900", spots: 10, image: "highlight-yoga.jpg" },
        { title: "Afterwork Drinks", badge: nil, badge_style: "", spots: 6, image: "highlight-drinks.jpg" }
      ] %>

      <% events.each do |e| %>
        <article class="group bg-white rounded-3xl shadow-sm ring-1 ring-black/5 overflow-hidden hover:shadow-lg transition duration-300">

          <!-- Image -->
          <div class="relative">
            <%= image_tag e[:image],
                  class: "h-48 w-full object-cover group-hover:scale-[1.02] transition duration-300",
                  alt: e[:title] %>

            <% if e[:badge].present? %>
              <div class="absolute top-4 left-4 px-3 py-1 rounded-full text-xs font-semibold <%= e[:badge_style] %>">
                <%= e[:badge] %>
              </div>
            <% end %>
          </div>

          <!-- Content -->
          <div class="p-6">
            <div class="flex items-start justify-between gap-4">

              <h3 class="text-lg font-semibold tracking-tight text-gray-900 leading-snug">
                <%= e[:title] %>
              </h3>

              <div class="shrink-0 w-10 h-10 rounded-full bg-zinc-900 text-white text-sm font-semibold flex items-center justify-center shadow">
                <%= e[:spots] %>
              </div>

            </div>

            <a href="#" class="mt-6 inline-block text-sm font-medium text-gray-600 hover:text-gray-900">
              View details
            </a>
          </div>

        </article>
      <% end %>

    </div>

  </div>
</section>
